# Camp Connect Environment Variables
# Copy this file to .env and fill in your values

# ===================
# Supabase (REQUIRED for Phase 1)
# ===================
# Frontend (Vite)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# Backend
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-jwt-secret

# ===================
# Database (REQUIRED for Phase 1)
# ===================
# Direct Postgres connection string from Supabase
# Format: postgresql://postgres:[YOUR-PASSWORD]@db.xxxx.supabase.co:5432/postgres
DATABASE_URL=

# ===================
# App Config
# ===================
VITE_API_BASE_URL=http://localhost:8000
SECRET_KEY=change-this-to-a-random-string
DEBUG=false

# ===================
# Stripe (Phase 3)
# ===================
VITE_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ===================
# Twilio (Phase 4)
# ===================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ===================
# SendGrid (Phase 4)
# ===================
SENDGRID_API_KEY=

# ===================
# AWS (Phase 7)
# ===================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=

# ===================
# Anthropic - Claude AI (Phase 7)
# ===================
ANTHROPIC_API_KEY=

# ===================
# Plaid (Phase 3)
# ===================
PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_ENV=sandbox
